            <Font name="Calibri" size="28.0" />
         </font>
      </Label>
      <TextField fx:id="manufacurerField" layoutX="14.0" layoutY="478.0" promptText="Manufacturer" />
      <TextField fx:id="modelField" layoutX="172.0" layoutY="478.0" promptText="Model" />
      <TextField fx:id="yearField" layoutX="329.0" layoutY="478.0" promptText="Year" />
      <TextField fx:id="regNoField" layoutX="486.0" layoutY="478.0" promptText="Registration Number" />
      <TextField fx:id="odemeterField" layoutX="14.0" layoutY="517.0" promptText="Odemeter Reading" />
      <TextField fx:id="tankField" layoutX="172.0" layoutY="517.0" promptText="Tank Capacity" />
      <Button layoutX="644.0" layoutY="548.0" mnemonicParsing="false" onAction="#addCar" text="Add Vehicle" />
      <TextField fx:id="requiresServField" layoutX="329.0" layoutY="517.0" promptText="Requires Service" />
    </children>
</AnchorPane>
